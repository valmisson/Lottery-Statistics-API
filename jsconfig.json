{
  "compilerOptions": {
    "target": "es2018",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["src/*"],
      "@app": ["src/app.js"],
      "@database/*": ["src/service/firebase.js"],
      "@controller/*": ["src/controller/*"],
      "@helper/*": ["src/helper/*"],
      "@model/*": ["src/model/*"],
      "@routes/*": ["src/routes/*"],
      "@service/*": ["src/service/*"]
    }
  },
  "exclude": ["node_modules"]
}
