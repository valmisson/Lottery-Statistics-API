{
  "compilerOptions": {
    "target": "es2018",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@sciences/*": ["src/sciences/*"],
      "@services/*": ["src/services/*"],
      "@routes": ["src/routes/index.js"],
      "@models": ["src/models/index.js"],
      "@controllers": ["src/controllers/index.js"]
    }
  },
  "exclude": ["node_modules"]
}
